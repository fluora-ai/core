{
  "name": "@fluora-ai/core",
  "author": "Fluora Team",
  "version": "0.1.1",
  "license": "MIT",
  "main": "dist/cjs/index.cjs",
  "module": "dist/esm/index.js",
  "typings": "dist/esm/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=20"
  },
  "type": "module",
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "prepare": "npm run build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run type-check && npm run test"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "size-limit": [
    {
      "path": "dist/cjs/index.cjs",
      "limit": "10 KB"
    },
    {
      "path": "dist/esm/index.js",
      "limit": "10 KB"
    }
  ],
  "dependencies": {
    "@coinbase/x402": "^0.4.3",
    "@modelcontextprotocol/sdk": "^1.15.1",
    "axios": "^1.11.0",
    "viem": "^2.33.3",
    "x402": "^0.4.3",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@size-limit/file": "^11.2.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vitest/coverage-v8": "^1.0.0",
    "eslint": "^8.57.1",
    "husky": "^9.1.7",
    "np": "^10.2.0",
    "size-limit": "^11.2.0",
    "tsdx": "^0.14.1",
    "tslib": "^2.8.1",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "vitest": "^1.0.0"
  },
  "keywords": [
    "fluora",
    "mcp",
    "model-context-protocol",
    "ai",
    "blockchain",
    "sdk"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/fluora-ai/core.git"
  },
  "bugs": {
    "url": "https://github.com/fluora-ai/core/issues"
  },
  "homepage": "https://fluora.ai/"
}
